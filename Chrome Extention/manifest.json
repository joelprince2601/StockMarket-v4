{
    "manifest_version": 3,
    "name": "My Drawing Tool Extension",
    "version": "1.0",
    "description": "A tool to draw boxes on the screen and compare with chart images.",
    "permissions": [
        "activeTab",
        "scripting",
        "clipboardRead",
        "https://cdn.jsdelivr.net/"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    }
  }
  